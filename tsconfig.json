{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "token/lib": [
        "libs/lib/src"
      ],
      "token/lib/*": [
        "libs/lib/src/*"
      ],
      "token/token": [
        "libs/token/src"
      ],
      "token/token/*": [
        "libs/token/src/*"
      ]
    }
  }
}